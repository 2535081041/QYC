.out_out{
  position: relative;
  height: 100vh;
  width: 100vw;
}
/* 每一个帖子的框架 */
.item{
  padding: 30rpx;
  padding-top: 30rpx;
  border-bottom: 1px solid rgba(128, 128, 128, 0.301);

  display: flex;
  justify-content: space-between;
}
/* 左边的头像框 */
.left_box{
  width: 13%;
  margin-right: 10rpx;
}
.photo_box{
  text-align: center;
  width: 100%;
}
.photo{
  width: 80rpx;
  height: 80rpx;
  border-radius: 15rpx;
}


/* 右边的信息框 */
.right_box{
  flex: 1;
}
.top_info, .col_com{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.col_com{
  color: gray;
  font-size: small;
}
.col_com_label{
  height: 35rpx;
  width: 35rpx;
  margin-right: 7rpx;
  margin-left: 7rpx;
}
.name{
  flex: 1;
}

.right_box{
  line-height: 1.6em;
  flex: 1;
}
.title{
  color: rgb(12, 78, 45);
}
.body{
  line-height: 1.2em;
  font-size: smaller;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
/* 帖子图片框 */
.img_box{
  width: 550rpx;
  margin: 15rpx;
  margin-top: 20rpx;
}
.img_{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 160rpx;
}
.img{
  height: 170rpx;
  width: 170rpx;
  border-radius: 10rpx;
}


.buttom{
  color: gray;
  text-align: center;
  font-size: smaller;
  padding: 20rpx;
}
.outoutout{
  position: relative;
}
.emit_label{
  position: fixed;   
  right: 25rpx;
  bottom: 50rpx;
  height: 67rpx;
  width: 67rpx;
  opacity: 0.5;
  background-color: rgb(243, 243, 243);
  border-radius: 20rpx;
}