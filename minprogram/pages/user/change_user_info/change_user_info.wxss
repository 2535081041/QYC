.out_out{
  height: 100vh;
  width: 100vw;
  display: flex;
  justify-content: center;
}
.photo_box{
  margin-top: 200rpx;
  position:relative;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.photo{
  width: 200rpx;
  height: 200rpx;
  border-radius: 30rpx;
}
.input_box{
  width: 100vw;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 1px solid rgba(128, 128, 128, 0.199);
  border-bottom: 1px solid rgba(128, 128, 128, 0.199);
  margin-top: 30rpx;
}
.input_title{
  width: 20vw;
  text-align: center;
  padding: 20rpx;
  margin-right: 50rpx;
}
.input{
  width: 60vw;
}
.btn{
  margin-top: 30rpx;
}
.edit_label{
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  bottom: 0rpx;
  right: 0rpx;
}